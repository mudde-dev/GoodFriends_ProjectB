@page
@model FriendList
@{
    ViewData["Title"] = "FriendList";
}

<!-- Page list-of-quotes -->
<div class="container px-4 py-4" id="list-of-quotes">
    <h2 class="pb-2 border-bottom">List of famous quotes</h2>

    <p>Below are some famous quotes about love, work and the fact that tomorrow is another day. Select one that your friend likes.</p>
    @foreach (var item in Model.Friends)
    {
        <div class="row mb-2 text-center">
            <div class="col-md-10 themed-grid-col">
                @item.FirstName @item.LastName
                <div class="col-md-16  text-end">@item.Birthday </div>

                 @foreach( var quote in item.Quotes )
               {
                 <div class="col-md-16  text-end">@quote.QuoteText </div>
               }

               
            </div>
            <div class="col-md-2 themed-grid-col">
@*                 <a href="~/Studies/Model/ModelView?id=@item.FriendId" class="btn btn-success btn-sm" type="button">View</a> *@
             <a asp-page="/Model/ModelView"w" asp-route-id=@item.FriendId class="btn btn-success btn-sm" type="button">View</a>
            </div>
        </div>
    }

       <nav aria-label="Standard pagination example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="~/Pages/FriendList?pagenr=@Model.PrevPageNr&search=@Model.SearchFilter" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 0; i < Model.PresentPages; i++)
            {
                <li class="page-item">
                    <a class="page-link" href="~/Pages/FriendList?pagenr=@i&search=@Model.SearchFilter">@(i+1)</a>
                </li>

            }
            <li class="page-item">
                <a class="page-link" href="~/Pages/FriendList?pagenr=@Model.NextPageNr&search=@Model.SearchFilter" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>

    
      
 


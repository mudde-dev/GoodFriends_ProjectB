@page
@model FriendList
@{
    ViewData["Title"] = "FriendList";
}

<!-- Page list-of-quotes -->
<div class="container px-4 py-4" id="list-of-quotes">
    <h2 class="pb-2 border-bottom">A List of Friends and their quotes and Birthdate</h2>

 
    <p>Below are some Friends and their quotes</p>

    <form method="post">

    <input type="hidden" name="id" data-seido-selected-item-id-target />

    @foreach (var item in Model.Friends)
    {
        <div class="row mb-2 text-center">
            <label for="named" class="form-label">Names</label>

            <div class="col-md-10 themed-grid-col">

                @item.FirstName @item.LastName
        <br>
                 @foreach( var quote in item.Quotes )
               {
                 <label for="quotes" class="form-label">Quote</label>
                 <div class="col-md-16  text-end">@quote.QuoteText 

                          <button type="button" class="btn btn-success btn-sm m-1"
                                data-seido-selected-item-id="@quote?.QuoteId"
                                data-bs-toggle="modal" data-bs-target="#dangerDelQModal"
                                @quote?.QuoteId
                                data-seido-modal-title="Delete @quote?.QuoteId?" 
                                data-seido-modal-body=" @quote?.QuoteText"
                                data-seido-modal-cancel="No"
                                data-seido-modal-Ok="Delete" 
                                >Del</button>
                 </div>
               }
        <br>

                    @foreach( var pet in item.Pets )
               {
                <label for="pet" class="form-label">Pet</label>
                 <div class="col-md-16  text-end">@pet.Name the @pet.Mood @pet.Kind 

                    
                          <button type="button" class="btn btn-success btn-sm m-1"
                                                        data-seido-selected-item-id="@pet?.PetId"
                                                        data-bs-toggle="modal" data-bs-target="#dangerDelPModal"
                                                        @pet?.PetId
                                                        data-seido-modal-title="DeletePet @pet?.PetId?" 
                                                        data-seido-modal-body="@pet?.Name the @pet?.Mood @pet?.Kind "
                                                        data-seido-modal-cancel="No"
                                                        data-seido-modal-Ok="DeletePet" 
                                        >Del</button>
                 </div>
               }


               
            </div>
            <div class="col-md-2 themed-grid-col">
@*                 <a href="~/Studies/Model/ModelView?id=@item.FriendId" class="btn btn-success btn-sm" type="button">View</a> *@
             <a asp-page="/Model/ModelView"w" asp-route-id=@item.FriendId class="btn btn-success btn-sm" type="button">View</a>
                   
            </div>
        </div>
    }


        <div class="modal fade" id="dangerDelQModal" tabindex="-1" aria-labelledby="softModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="softModalLabel">Confirm deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                      Quote to be Deleted
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" asp-page-handler="Delete" class="btn btn-primary btn-danger" data-bs-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>


     <div class="modal fade" id="dangerDelPModal" tabindex="-1" aria-labelledby="softModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="softModalLabel">Confirm deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                      Pet to be Delete
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" asp-page-handler="DeletePet" class="btn btn-primary btn-danger" data-bs-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>
    </form>
       <nav aria-label="Standard pagination example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" asp-page="FriendList" asp-route-pagenr=@Model.PrevPageNr asp-route-search=@Model.SearchFilter aria-label="Previous">@*&search=@Model.SearchFilter*@
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 0; i < Model.NrVisiblePages; i++)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="FriendList" asp-route-pagenr=@i asp-route-search=@Model.SearchFilter>@(i+1)</a>@*&search=@Model.SearchFilter*@
                </li>

            }
            <li class="page-item">
                <a class="page-link" asp-page="FriendList" asp-route-pagenr=@Model.NextPageNr asp-route-search=@Model.SearchFilter aria-label="Next">@*&search=@Model.SearchFilter*@
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>

    
      
 

